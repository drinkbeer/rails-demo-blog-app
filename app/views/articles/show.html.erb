<h1>Hello, show article with id <%= :id%></h1>

<h3>Id:  <%= @article.id %></h3>
<li>Title:  <%= @article.title %></li>
<li>Body:  <%= @article.body %></li>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>